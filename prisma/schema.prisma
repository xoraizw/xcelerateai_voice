generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Demo {
  id           String   @id @default(cuid())
  name         String
  prompt       String
  firstMessage String?
  publicId     String   @unique
  playCount    Int      @default(0)
  maxPlays     Int      @default(2)
  apiKey       String?
  vapiConfig   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([publicId])
}
